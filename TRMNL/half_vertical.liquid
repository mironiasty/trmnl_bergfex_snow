<div class="view">
  <div class="layout layout--col gap--none">
    <div class="w--full px--3 mb--5">
      {% render "show_progress", label: "Otwarte trasy", value: {{slopes_open_count}}, total: {{slopes_total_count}} %}
      <div class="divider my--3"></div>
      {% render "show_progress", label: "Otwarte wyciągi",, value: {{lifts_open_count}}, total: {{lifts_total_count}} %}
    </div>
    <div class="flex flex--col gap--medium w--full flex--center">
      <div class="grid grid--cols-2">
        {% render "show_item", label: "Góra", value: {{snow_mountain}}, unit: "cm" %}
        {% render "show_item", label: "Dolina", value: {{snow_valley}}, unit: "cm" %}
      </div>
      <div class="divider"></div>
      <div class="grid grid--cols-2">
        {% render "last_snowfall_item", snowfall: {{last_snowfall}} %}
        {% render "show_item", label: "Nowy śnieg", value: {{new_snow}}, unit: "cm"%}
      </div>
      <div class="divider"></div>
      <div class="grid grid--cols-2">
        {% render "show_item_small", label: "Charakterystyka", value: {{snow_condition}} %}
        {% render "show_item_small", label: "Lawinowe", value: {{avalanche_warning}} %}
      </div>
    </div>
  </div>
</div>
<div class="title_bar">
  <img class="image" src="https://www.bergfex.at/c/wp-content/uploads/2023/06/icon-tours.svg">
  <span class="title">Bergfex</span>
  <span class="instance">{{ resort_name }}</span>
</div>
